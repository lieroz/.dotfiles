! URxvt

! General settings
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: True

! Extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select,font-size
URxvt.urlLauncher: xdg-open
URxvt.urlButton: 1
URxvt.underlineURLs: True

URxvt.copyCommand:  xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard

! Keybindings
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Shift-Control-X: command:\033c

! Fonts

URxvt.font: xft:Ubuntu Mono derivative Powerline:pixelsize=16:minspace=False, xft:DejaVu Sans:pixelsize=14
URxvt.boldFont: xft:Ubuntu Mono derivative Powerline:pixelsize=16:minspace=False, xft:DejaVu Sans:pixelsize=14
URxvt.letterSpace: 0

! Theme

! special
*.foreground:   #c5c8c6
*.background:   #1f1f1f
*.cursorColor:  #c5c8c6

! black
*.color0:       #282a2e
*.color8:       #373b41

! red
*.color1:       #a85377
*.color9:       #a85377

! green
*.color2:       #746f81
*.color10:      #746f81

! yellow
*.color3:       #545670
*.color11:      #545670

! blue
*.color4:       #6a9bb9
*.color12:      #6a9bb9

! magenta
*.color5:       #764970
*.color13:      #764970

! cyan
*.color6:       #abb9ba
*.color14:      #abb9ba

! white
*.color7:       #899298
*.color15:      #899298

URxvt.transparent:   true
URxvt.shading:       15
urxvt*depth: 		 32
urxvt*background:    rgba:0020/0200/0200/c800

URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot

URxvt.iso14755: false
URxvt.iso14755_52: false
